{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignore": ["**/node_modules/**", "**/dist/**", "**/.git/**"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noInferrableTypes": "off",
                "noNonNullAssertion": "off",
                "noParameterAssign": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 150
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "organizeImports": {
        "enabled": true
    }
}
